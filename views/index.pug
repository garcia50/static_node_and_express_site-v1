extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Hi, I'm Luis. I design & build web apps.
      p.lead.text-light
        | Check out some of my projects I built while enrolled in TeamTreehouse's Tech Degree!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`projects/${project.id}`)
            img.thumbnail.indexImg(src=`${project.image_urls[0]}`)
            h5 #{project.project_name}